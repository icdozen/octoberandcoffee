<div class="header">
    <div class="home-menu pure-menu pure-menu-horizontal pure-menu-fixed">
        <ul class="pure-menu-list">
            <li class="pure-menu-item"><a href="products" class="pure-menu-link" font-face="bebas">Products</a></li>
            <li class="pure-menu-item"><a href="products#about_us" class="pure-menu-link">About Us</a></li>
            <li class="pure-menu-item"><a href="products#contact" class="pure-menu-link">Contact</a></li>
        </ul>
    </div>
</div>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<strong>Image:</strong>
<%= @product.image %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.formatted_price %>
</p>


<h3>Reviews</h3>
  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
       <%= review.created_at.strftime("%m/%d/%Y") %>
    </p>
<% end %>

<h3>New Review</h3>
<%= render 'reviews/form' %>



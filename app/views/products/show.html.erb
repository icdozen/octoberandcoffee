<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<strong>Image:</strong>
<%= @product.image %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.formatted_price %>
</p>


<h3>Reviews</h3>
  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
       <%= review.created_at.strftime("%m/%d/%Y") %>
    </p>
<% end %>

<h3>New Review</h3>
<%= render 'reviews/form' %>


